#include <stdio.h>

int main() {
    FILE *fp;
    char str[100];

    // Write to file
    fp = fopen("data.txt", "w");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }
    fprintf(fp, "Hello from nihaL7's fileIO project!\n");
    fclose(fp);

    // Read from file
    fp = fopen("data.txt", "r");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }
    while (fgets(str, 100, fp)) {
        printf("%s", str);
    }
    fclose(fp);

    return 0;
}

